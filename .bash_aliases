# Aliases called by ~/.bashrc

# Terminal
alias cp='cp -iv'
alias rm='rm -Idv'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias ..='cd ..'
alias ~='cd'

# Python
alias py='/usr/bin/python3'
alias python='/usr/bin/python3'

# VIM
alias v='/usr/bin/nvim'
alias vi='/usr/bin/nvim'
alias vim='/usr/bin/nvim'
